<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <EditText
        android:id="@+id/movieTitleInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Movie Title"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/directorInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Director"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/movieTitleInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/releaseYearInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Release Year"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/directorInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/genreInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Genre"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/releaseYearInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/addRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add Record"
        app:layout_constraintTop_toBottomOf="@id/genreInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>